{
  "extends": "@workspace/typescript-config/react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "paths": {
      "@workspace/ui/*": ["./src/*"],
      "@workspace/cloudinary": ["../cloudinary/src/index.ts"],
      "@workspace/cloudinary/*": ["../cloudinary/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}