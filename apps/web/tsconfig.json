{
  "extends": "@workspace/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@workspace/auth": ["../../packages/auth/src/index.ts"],
      "@workspace/auth/*": ["../../packages/auth/src/*"],
      "@workspace/cloudinary": ["../../packages/cloudinary/dist/index.d.ts"],
      "@workspace/cloudinary/*": ["../../packages/cloudinary/dist/*"],
 "@workspace/database": ["../../packages/database/src/index.ts"],
      "@workspace/database/*": ["../../packages/database/src/*"],
      "@workspace/lib": ["../../packages/lib/dist/index.d.ts"],
      "@workspace/lib/*": ["../../packages/lib/dist/*"],
      "@workspace/ui": ["../../packages/ui/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types"
  ],
  "exclude": ["node_modules"]
}